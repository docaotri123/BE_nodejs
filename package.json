{
  "name": "BE_Nodejs",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/long": "^4.0.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "gulp": "^4.0.2",
    "gulp-mocha": "^7.0.2",
    "gulp-util": "^3.0.8",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^15.0.0",
    "sinon": "^8.0.1",
    "source-map-support": "^0.5.16"
  },
  "dependencies": {
    "@types/node": "^8.10.59",
    "ts-node": "^3.3.0",
    "typescript": "^3.3.3333",
    "amqplib": "^0.5.5",
    "bcrypt": "^3.0.7",
    "bluebird": "^3.7.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.24.0",
    "mysql2": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "swagger-jsdoc": "^3.5.0",
    "swagger-ui-express": "^4.1.3",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.21"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**/*.spec.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "scripts": {
    "start": "node build/src/app.js",
    "start:dev": "ts-node src/app.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/test**/*.spec.ts' --exec nodemon src/app.ts",
    "unit-test": "DATABASE_NAME=test mocha -r ts-node/register --colors src/test/connectDB.ts src/test/service/*.spec.ts --exit",
    "coverage-unit": "nyc npm run unit-test",
    "integration-test": "DATABASE_NAME=test mocha -r ts-node/register --colors src/test/controller/*.spec.ts --exit",
    "coverage-integration": "nyc npm run integration-test",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "lint": "tslint -p tsconfig.json",
    "build": "rm -rf ./build && tsc"
  }
}
